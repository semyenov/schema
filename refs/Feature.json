{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://regioni.local/schema/Feature",

  "title": "GeoJSON Feature",
  "type": "object",
  "required": ["type", "properties", "geometry"],
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "const": "Feature"
    },
    "id": {
      "oneOf": [{ "type": "number" }, { "type": "string" }]
    },
    "properties": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "anyOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" }
            ]
          }
        }
      ]
    },
    "geometry": {
      "oneOf": [
        { "$ref": "https://regioni.local/schema/Geometry#" },
        { "$ref": "https://regioni.local/schema/GeometryCollection#" }
      ]
    },
    "bbox": {
      "type": "array",
      "minItems": 4,
      "items": {
        "type": "number"
      }
    }
  }
}
