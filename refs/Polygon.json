{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://regioni.local/schema/Polygon",

  "title": "GeoJSON Polygon",
  "type": "object",
  "required": ["type", "coordinates"],
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "const": "Polygon"
    },
    "coordinates": {
      "type": "array",
      "items": {
        "type": "array",
        "minItems": 4,
        "items": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "number"
          }
        }
      }
    },
    "bbox": {
      "type": "array",
      "minItems": 4,
      "items": {
        "type": "number"
      }
    }
  }
}
