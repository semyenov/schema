{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://regioni.local/schema/GeometryCollection",

  "title": "GeoJSON GeometryCollection",
  "type": "object",
  "required": ["type", "geometries"],
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "const": "GeometryCollection"
    },
    "geometries": {
      "type": "array",
      "items": {
        "$ref": "https://regioni.local/schema/Geometry#"
      }
    },
    "bbox": {
      "type": "array",
      "minItems": 4,
      "items": {
        "type": "number"
      }
    }
  }
}
